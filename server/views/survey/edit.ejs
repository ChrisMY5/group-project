
<%- include('../components/head.ejs'); %>

<%- include('../components/header.ejs'); %>


<!-- Contents for the Edit page-->
<!-- Final view page of data editting -->
<div class="container"><br>
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <h1><%= title %></h1>
            <form class="form" method="post">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" 
                    id="nameTextField"
                    placeholder="Enter the Full Name"
                    name="name" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="genderTextField">Gender</label>
                    <input type="text" class="form-control" 
                    id="genderTextField"
                    placeholder="Male / Female / Others"
                    name="gender" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control" 
                    id="emailTextField"
                    placeholder="Enter the Email Address"
                    name="email" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="question1TextField">Question 1</label>
                    <input type="text" class="form-control" 
                    id="question1TextField"
                    placeholder="Create question 1"
                    name="question1" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="question2TextField">Question 2</label>
                    <input type="text" class="form-control" 
                    id="question2TextField"
                    placeholder="Create question 2"
                    name="question2" required>
                </div>
                <br>
                <div class="form-group">
                    <label for="question3TextField">Question 1</label>
                    <input type="text" class="form-control" 
                    id="question3TextField"
                    placeholder="Create question 3"
                    name="question3" required>
                </div>
                <br>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i>   Edit</button>

                    <a href="/survey" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>





<%- include('../components/footer.ejs'); %>


<%- include('../components/script.ejs'); %>